          <%= f.input :comment, label: false, placeholder: "Add your review here..." %>
          <%= f.input :rating, label: false, as: :select, collection: (1..5), required: true, prompt: "What's your rating", input_html: { data: { controller: "jquery-bar-rating" } } %>
