            <div class="logos-first-line">
              <div class="personnality-line">
                <ion-icon name="accessibility-outline"></ion-icon><p><%= @friend.personnality %></p>
              </div>

              <div class="event-line">
                <ion-icon name="wine-outline"></ion-icon><p><%= @friend.event_category %></p>
              </div>

              <div class="hobby-line">
                <ion-icon name="heart-outline"></ion-icon><p><%= @friend.hobby %></p>
              </div>
            </div>

            <div class="card-friend-infos-details"></div>
          </div>
        </div>
      </div>
  </div>

    <div>
    <button id="click-me">Request</button>
    </div>

<% @friend.reviews %>
<% @friend.reviews.each do |review| %>
  <%= review.comment %>
  <%= review.rating %>
<% end %>


<div class="text-background">
<div class="overlay">

  <div class="card-friend" id="popup">


    <% if @friend.photo.attached? %>
      <%= cl_image_tag @friend.photo.key %>
    <% else %>
      <%= image_tag("default.jpg") %>
    <% end %>

    <div class="card-friend-infos">
      <div>
        <h2 class="confirmation">Your request was accepted and confirmed!</h2>
        <p class="resa-details">With <strong><%= @friend.first_name %></strong></p>
        <p class="resa-details">- <strong><%= @friend.localisation %></strong> -</p>
        <p class="resa-details">For <strong><%= @friend.event_category %></strong></p>

        <div class="valid-reservation-button">
          <a class="send-chat" href="/chatroom">Chat</a>
        </div>

        <a class="back-pop">Close</a>

      </div>
    </div>
  </div>

</div>
</div>
</div>
