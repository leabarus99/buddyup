<div class="container-buddyup">
  <div class="log-buttons">
    <%= link_to "Login", new_user_session_path %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete %>
  </div>


  <div class="back-friends">
    <%= link_to "< Back", friends_path %>
  </div>

  <div class="profile-image", style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
  url(<%=@friend.photo.attached? ? cl_image_path(@friend.photo.key) : asset_path("default.jpg") %>)">
  </div>

  <div class="cards">

      <div class="profile-description">

        <div class="card-friend-infos">
          <div>
            <div class="card-friend-infos-first-line">
              <h2><%= @friend.first_name.upcase %></h2>
              <div class="calendar-line">
                <ion-icon name="calendar-outline"></ion-icon><p class="available"><%= @friend.availability %></p>
              </div>
            </div>

            <div class="localisation-line">
              <ion-icon name="pin-outline"></ion-icon><p class="localisation"><%= @friend.localisation %></p>
            </div>

            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua
